<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GalleryActivity">

    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_margin="10dp"
            android:id="@+id/titulocatg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fondotitulocateg"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorTitle"
                android:layout_centerVertical="true"
                android:hint="RESTAURANTES"
                android:textAlignment="center"
                android:id="@+id/titulorest"
                android:textSize="25sp" />

            <ImageView
                android:layout_margin="5dp"
                android:src="@drawable/baby_beef"
                android:id="@+id/imgTitlePlato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerview"
            android:layout_below="@id/titulorest">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>