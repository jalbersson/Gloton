<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RestaurantList"
    android:background="@drawable/markwater">


    <RelativeLayout
        android:id="@+id/titulocatg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imgFondo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/fondotitulocateg" />

        <Button
            android:id="@+id/btnTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/imgTitleCateg"
            android:background="@drawable/fondotitulocateg"
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imgTitleCateg"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_margin="5dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulocatg"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/location"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="CercanÃ­a"
            android:textColor="@color/ListLabels"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_20_sp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/platoicon"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Restaurante"
            android:textColor="@color/ListLabels"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_20_sp"/>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearTitle"
        android:layout_margin="10dp">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>